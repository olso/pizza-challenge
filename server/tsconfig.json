{
    "compilerOptions": {
      "preserveConstEnums": true,
      "target": "esnext",
      "moduleResolution": "node",
      "allowJs": true,
      "noEmit": true,
      "strict": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
    },
    "include": ["./src", "./@types"],
    "exclude": ["./node_modules"],
    "ts-node": {
      "files": true,
    }
  }
  